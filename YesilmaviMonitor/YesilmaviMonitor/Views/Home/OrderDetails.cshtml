@model YesilmaviMonitor.Models.MonitorModel
@{
    ViewBag.Title = "OrderDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-lg-12">
    <div class="card">
        <div class="card-title">
            <div class="card-title-left">
                <h4 class="card-title-text">Son 50 Sipariş</h4>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="table-export" class="table table-striped table-bordered display nowrap">
                    <thead>
                        <tr>
                            <th>Logicalref</th>
                            <th>Sipariş Türü</th>
                            <th>Tarih</th>
                            <th>Açıklama</th>
                            <th>Start date</th>
                            <th></th>
                        </tr>
                    </thead>

                    @foreach (var item in Model.orderDetailsList)
                    {
                        <tbody>
                            <tr>
                                <td>@item.ItemsName</td>
                                <td></td>
                                <td>@item.ITEMREF</td>
                                <td>@item.ORDERREF</td>
                                <td></td>
                                <td></td>

                            </tr>

                        </tbody>
                    }



                </table>
            </div>
        </div>
    </div>
</div>



