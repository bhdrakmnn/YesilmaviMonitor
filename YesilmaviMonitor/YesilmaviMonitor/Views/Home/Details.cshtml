@model YesilmaviMonitor.Models.MonitorModel

@{
    ViewBag.Title = "MusteriDetay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-title">
            <div class="card-title-left">
                <h4 class="card-title-text">Müşteri Detay</h4>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="table-export" class="table table-striped table-bordered display nowrap">
                    <thead>
                        <tr>
                            <th>Logo</th>
                            <th>Firma İsmi</th>
                            <th>E Mail</th>
                            <th>Adres</th>
                            <th>Telefon</th>
                            <th>Web Adresi</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><img src="https://@Model.CustomerInfo.fax2/@Model.CustomerInfo.logoPath" class="card-img-top" alt="@Model.CustomerInfo.firma_ismi"></td>
                            <td>@Model.CustomerInfo.firma_ismi</td>
                            <td>@Model.CustomerInfo.email</td>
                            <td>@Model.CustomerInfo.firma_adres</td>
                            <td>@Model.CustomerInfo.fax1</td>
                            <td>@Model.CustomerInfo.fax2</td>
                            <td></td>
                        </tr>



                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

@if (Model.waitingOrders != null && Model.waitingOrders.Count > 0 )
{
    <div class="col-lg-12">
        <div class="card">
            <div class="card-title">
                <div class="card-title-left">
                    <h4 class="card-title-text">Son 50 Sipariş</h4>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="table-export" class="table table-striped table-bordered display nowrap">
                        <thead>
                            <tr>
                                <th>Logicalref</th>
                                <th>Sipariş Türü</th>
                                <th>Tarih</th>
                                <th>Açıklama</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        @foreach (var item in Model.waitingOrders)
                        {
                            if (Model.waitingOrders != null && Model.waitingOrders.Count > 0)
                            {
                                <tbody>
                                    <tr>
                                        
                                        <td>@item.ClcardName</td>
                                        <td>@item.SlsmanName</td>
                                        <td>@item.ACIKLAMA</td>
                                        <td></td>
                                        <td><a href="@Url.Action("OrderDetails","Home", new {orderref = item.LOGICALREF, dbName = Model.DataBaseName})"> <small class="text-muted btn btn-primary" style="color:white !important;">Sipariş Detayını Görüntüle</small></a></td>


                                    </tr>
                                </tbody>
                            }
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>

}

